{% extends "base.jinja" %}

{% block title %}
Usuario: {{current_user.id}}
{% endblock title %}
{% block styles %}
{{ super() }}
<link
      rel="stylesheet"
      href="{{url_for('static',filename='css/form.css')}}"
/>
{% endblock styles %}
{% block content %}
<main >
<h3>Configuración de usuario</h3>
<form id="formUser">
  <label for="">Usuario</label>
  <input 
    type="text" 
    id="username" 
    name="username" 
    readonly 
    required 
    value="{{current_user.id}}" 
    class="form-control"
  >
  <label for="email">Correo</label>
  <input type="email" name="email" id="email" class="form-control" required value="{{current_user.email}}">
  <label for="password">Contraseña</label>
  <input type="password" name="password" id="password" class="form-control" required>
<div id="containerPassword">
</div>
<div class="btn-grup">
  <button type="button" id="btnNewPassword" class="btn btn-info">Nueva contraseña</button>
  <button type="submit" class="btn btn-success">Guardar</button>
</div>
</form>
</main>
{% endblock content %}
{% block scripts %}
{{ super() }}
<script>
  const URL_PUT_USER = "{{url_for("AuthApi.put_user")}}"
</script>
<script src="{{url_for('static',filename='js/components.js')}}"></script>
<script src="{{url_for('static',filename='js/user.js')}}"></script>
{% endblock scripts %}