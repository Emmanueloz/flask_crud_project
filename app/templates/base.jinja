<!DOCTYPE html>
<html lang="es_MX">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
  {% block title %}
  {% endblock title %}
  </title>
  <link
      rel="shortcut icon"
      href="{{url_for('static',filename='img/favicon.ico')}}"
      type="image/x-icon"
  />
  {% block styles %}
    <link
      rel="stylesheet"
      href="{{url_for('static',filename='/bootstrap/css/bootstrap.min.css')}}"
    />
    <link
      rel="stylesheet"
      href="{{url_for('static',filename='sweetalert2/package/dist/sweetalert2.min.css')}}"
    />
    <link
      rel="stylesheet"
      href="{{url_for('static',filename='css/navbar.css')}}"
    />
  {% endblock styles %}
</head>
<body>
  <header>
  {% include "navbar.jinja" %}
  </header>
  {% block content %}
  {% endblock content %}
  {% block scripts %}
    <script src="{{url_for('static',filename='bootstrap/js/bootstrap.min.js')}}"></script>
    <script src="{{url_for('static',filename='sweetalert2/package/dist/sweetalert2.min.js')}}"></script>
    <script src="{{url_for('static',filename='js/constants.js')}}"></script>
    <script>
    const linkLogout = document.getElementById("link_logout") 
    if(linkLogout){
        linkLogout.addEventListener("click",()=>{
          localStorage.removeItem("x-access-tokens")
          localStorage.removeItem("user_id")
      })
    }
    </script>
  {% endblock scripts %}
</body>
</html>